             x:Class="MauiProjectGA1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Number 1" />
            <Entry x:Name="txtNumber1" />
            <Label Text="Number 2" />
            <Entry x:Name="txtNumber2" />
            <Label x:Name="lblResult" />
