<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjectGA1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Number 1" />
            <Entry x:Name="txtNumber1" />
            <Label Text="Number 2" />
            <Entry x:Name="txtNumber2" />
            <Label x:Name="lblResult" />
            <Button Text="Add" x:Name="btnAdd" Clicked="btnAdd_Clicked"/>
        </VerticalStackLayout>
        <Button Text="Add" x:Name="btnAdd" Clicked="btnAdd_Clicked"/>
        <Button Text="Subtract" x:Name="btnSubtract" Clicked="btnSubtract_Clicked"/>
        <Button Text="Multiply" x:Name="btnMultiply" Clicked="btnMultiply_Clicked"/>
        <Button Text="Divide" x:Name="btnDivide" Clicked="btnDivide_Clicked"/>
        </Button>
    </ScrollView>

</ContentPage>
